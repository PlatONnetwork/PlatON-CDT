message(STATUS "Setting up PlatON Wasm Toolchain @VERSION_FULL@ at @CDT_ROOT_DIR@")

set(CMAKE_SYSTEM_NAME Generic)
set(CMAKE_SYSTEM_PROCESSOR wasm)
set(CMAKE_CROSSCOMPILING 1)
set(CMAKE_C_COMPILER_WORKS 1)
set(CMAKE_CXX_COMPILER_WORKS 1)

set(PLATON_CDT_VERSION "@VERSION_FULL@")
set(PLATON_WASMSDK_VERSION "@VERSION_FULL@")

set(CMAKE_C_COMPILER "@CDT_ROOT_DIR@/bin/platon-cpp")
set(CMAKE_CXX_COMPILER "@CDT_ROOT_DIR@/bin/platon-cpp")

set(WASM_LINKER "@CDT_ROOT_DIR@/bin/platon-ld")

set(CMAKE_C_LINK_EXECUTABLE "${WASM_LINKER} <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES>")
set(CMAKE_CXX_LINK_EXECUTABLE "${WASM_LINKER} <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES>")

set(CMAKE_EXECUTABLE_SUFFIX ".wasm")
set(CMAKE_EXECUTABLE_SUFFIX_CXX ".wasm")
set(CMAKE_FIND_ROOT_PATH "@CDT_ROOT_DIR@")
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

set(ABIGEN "@CDT_ROOT_PATH@/bin/platon-abigen")
